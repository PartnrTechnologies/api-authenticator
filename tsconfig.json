{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"declaration": true,
		"moduleResolution": "node",
		"lib": ["es5", "es6"],
		"allowJs": true,
		"outDir": "./build",
		"rootDir": "./src",
		"removeComments": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "."
	},
	"include": ["src/**/*"]
}
